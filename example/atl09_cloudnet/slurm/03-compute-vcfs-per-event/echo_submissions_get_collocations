scratch_dir=$SCRATCH/vcfs_per_event_oe

for site in "ny-alesund" "hyytiala" "juelich" "munich"; do
    job_name="compute_vcfs_per_event_${site}";
    slurm_command="sbatch --partition=standard --qos=standard --account=icecaps --time=18:00:00 --mem=30G --job-name=${job_name} -o ${scratch_dir}/${job_name}_%a.o -e ${scratch_dir}/${job_name}_%a.e --array=0-442 job_compute_vcfs_per_event.sh ${site}";
    echo "#${site}";
    echo "${slurm_command}";
    echo "";
done
