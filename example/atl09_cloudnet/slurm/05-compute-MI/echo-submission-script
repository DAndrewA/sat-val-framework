scratch_dir=$SCRATCH/MI_oe

for site in "ny-alesund" "hyytiala" "juelich" "munich"; do
    job_name="compute_MI_${site}";
    slurm_command="sbatch --partition=standard --qos=standard --account=icecaps --time=1:00:00 --mem=15G --job-name=${job_name} -o ${scratch_dir}/${job_name}.o -e ${scratch_dir}/${job_name}.e job-compute-MI.sh ${site}";
    echo "#${site}";
    echo "${slurm_command}";
    echo "";
done

